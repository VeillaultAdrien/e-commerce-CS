@model Modele.e_commerce.Modele.Entities.Produit
@{
    ViewBag.Title = "Modification du produit";

}



@using (Html.BeginForm("editionProduit", "Produit", FormMethod.Post))
{
    @Html.ValidationSummary(true, "Echec de la modification du produit")
    <div>
    @Html.LabelFor(m=> m.Libelle);
    @Html.TextBox("Libelle",@Model.Libelle);
    </div>
    <div>
    @Html.LabelFor(m => m.Description);
    @Html.TextArea("Description", @Model.Description);
    </div>
    <div>
    @Html.LabelFor(m => m.Prix);
    @Html.TextBox("Prix", @Model.Prix, new { type = "number" });
    </div>
    <div>
    @Html.LabelFor(m => m.Stock);
    @Html.TextBox("Stock", @Model.Stock, new { type = "number" });
    </div>
    <div>
    @Html.LabelFor(m => m.Code);
    @Html.TextBox("Code", @Model.Code, new { type = "number" });
    </div>
    <input type="submit" value="valider" />
}
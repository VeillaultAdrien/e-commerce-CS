@model Modele.e_commerce.Modele.Entities.Produit
@{
    ViewBag.Title = "Modification du produit";

}

@using (Html.BeginForm("editionProduit", "Produit", FormMethod.Post, new { @class = "text-center" }))
{
    @Html.ValidationSummary(true, "Echec de la modification du produit")
    @Html.TextBoxFor(m => m.IDProduit, new { @class = "hidden" })
    <div class="form-group">
        @Html.LabelFor(m => m.Libelle)
        @Html.TextBox("Libelle", @Model.Libelle, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextArea("Description", @Model.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Prix)
        @Html.TextBox("Prix", @Model.Prix, new { @class = "form-control", type = "number", step = 0.1, min = 0 })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Stock)
        @Html.TextBox("Stock", @Model.Stock, new { type = "number", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Code)
        @Html.TextBox("Code", @Model.Code, new { type = "number", @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="valider" />
    </div>
        }

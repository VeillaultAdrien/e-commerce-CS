@model Modele.e_commerce.Modele.Entities.Produit
@{
    ViewBag.Title = "Ajout d'un produit";

}

@using (Html.BeginForm("ajouterProduit", "Produit", FormMethod.Post))
{
    @Html.ValidationSummary(true, "Echec de la création du produit")
    <div class="form-group">
        <label class="col-sm-2 control-label">Code</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Libelle, new { @class = "form-control" })
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-sm-2 control-label">Price</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Prix, new { @class = "form-control" })
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-sm-2 control-label">Stock</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Stock, new { @class = "form-control" })
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-sm-2 control-label">Catégorie</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.CategorieId, new { @class = "form-control" })
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-sm-2 control-label">Catégorie</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Categorie, new { @class = "form-control" })
        </div>
    </div><br />
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            @Html.TextBoxFor(m => m.IDProduit, new { @class = "hidden" })
            <input type="submit" class="btn btn-default" value="Ajouter" />
        </div>
    </div>
}
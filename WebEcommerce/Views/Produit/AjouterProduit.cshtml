@model Modele.e_commerce.Modele.Entities.Produit
@{
    ViewBag.Title = "Ajout d'un produit";

}

@using (Html.BeginForm("ajouterProduit", "Produit", FormMethod.Post, new { @class = "text-center" }))
{
    @Html.ValidationSummary(true, "Echec de la création du produit")
<div class="form-group">
    @Html.LabelFor(m => m.Code)
    
        @Html.TextBoxFor(m => m.Code, new { @class = "form-control", required = true })

</div>
<div class="form-group">
    @Html.LabelFor(m => m.Libelle)
    @Html.TextBoxFor(m => m.Libelle, new { @class = "form-control", required = true })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Prix)
    @Html.TextBoxFor(m => m.Prix, new { @class = "form-control", type = "text", pattern = "[0-9]*,[0-9][0-9]", required = true })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Stock)
    @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", type="number", step = 1, min = 0, required = true })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Description)
    @Html.TextBoxFor(m => m.Description, new { @class = "form-control", required = true })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.CategorieId)
    @Html.TextBoxFor(m => m.CategorieId, new { @class = "form-control", type = "number", step = 1, min = 0, required = true })
</div>
    <div class="form-group">
 
            @Html.TextBoxFor(m => m.IDProduit, new { @class = "hidden" })
            <input type="submit" class="btn btn-default" value="Ajouter" />
    </div>
}
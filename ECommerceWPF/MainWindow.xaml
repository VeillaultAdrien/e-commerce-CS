<Window x:Class="ECommerceWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ECommerceWPF"
        xmlns:my="clr-namespace:ECommerceWPF.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <Label DockPanel.Dock="Top" Background="AliceBlue" HorizontalAlignment="Center" Content="E-Commerce"/>
        <my:ListeProduit DockPanel.Dock="Left" DataContext="{Binding ListeProduitViewModel}"></my:ListeProduit>
    </DockPanel>
</Window>

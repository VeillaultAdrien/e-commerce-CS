<UserControl x:Class="ECommerceWPF.Views.ListeProduit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ECommerceWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label>Liste Produit</Label>
        <ListView Grid.Column="0"  Grid.Row="0" Grid.RowSpan="3" Margin="5px">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="100px" Header="Code"/>
                    <GridViewColumn Width="150px" Header="Nom" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
